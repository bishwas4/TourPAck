<!DOCTYPE html>
<html>
  <head>
    <title>Main</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'toastr_rails/flash' %>

    <nav class="navbar navbar-inverse ">
      <ul class="nav navbar-nav navbar-left">
        <li ></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to 'Home', root_path %></li>
        <li><%= link_to 'Contact Us', root_path %></li>
        <%if user_signed_in? %>
          <%if current_user.admin? %>
        <li><%=link_to 'Product', packages_path%></li>
          <%end%>
          <li><%= link_to 'Log Out', destroy_user_session_path, :method => :delete %></li>
        <%else%>  
          <li><%= link_to '<i class = "glyphicon glyphicon-user"></i> Sign Up'.html_safe, new_user_registration_path%></li>
          <li><%= link_to '<i class = "glyphicon glyphicon-log-in"></i> Sign In'.html_safe, new_user_session_path %></li>
        <%end -%>

      </ul>
    </nav>
    <%= yield %>
  </body>
</html>
