<div class="container">
  <h3 style="text-align: center;"> List of Packages</h3>
    <table class="table table-hover">
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @packages.each do |package| %>
            <tr>
              <td><%= package.title %></td>
              <td><%= package.description %></td>
              <td><%= package.price %> $</td>
            <%if user.signed_in?%>  
              <td><%= link_to 'Show', package ,class: 'btn btn-success' %></td>
            <%end%>  
            </tr>
          <% end %>
        </tbody>

      <br>

    </table>
      <%= link_to 'Book Package', booking_path, class: 'btn btn-primary '%>
</div>      
