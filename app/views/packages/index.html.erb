<div class="container">
  <h3 style="text-align: center;"> List of Packages</h3>
    <table class="table table-hover">
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @packages.each do |package| %>
            <tr>
              <td><%= package.title %></td>
              <td><%= package.description %></td>
              <td><%= package.price %> $</td>
              <td><%= link_to 'Show', package ,class: 'btn btn-success' %></td>
              <td><%= link_to 'Edit', edit_package_path(package), class: 'btn btn-warning' %></td>
              <td><%= link_to 'Destroy', package, class: 'btn btn-danger',method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>

      <br>

    </table>
      <%= link_to 'New Package', new_package_path, class: 'btn btn-primary '%>
</div>      
